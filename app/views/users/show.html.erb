<div class="col-sm-8">
  <div class="panel blank-panel">
    <div class="panel-heading">
      <div class="panel-options">
        <ul class="nav nav-tabs">
          <li><a href="project_detail.html#tab-1" data-toggle="tab">我的招募</a>
          </li>
          <li class=""><a href="project_detail.html#tab-2" data-toggle="tab">我的申请</a>
          </li>
        </ul>
      </div>
    </div>

    <div class="panel-body">
      <div class="tab-content">
        <div class="tab-pane active " id="tab-1">
          <div class="ibox-content">
            <table class="table table-hover">
              <tbody>
              <% if @user.tasks.any? %>
                <h3>总数：(<%=@user.tasks.count %></h3>
                <%=render @tasks %>
                </tbody>
                </table>
                <div style="width:100%;text-align: center">
                  <%= will_paginate @tasks %>
                </div>
          </div>
                <%end %>
        </div>

        <div class="tab-pane " id="tab-2">
          <div class="ibox-content">
            <%@apply.each do |t| %>
            <table class="table table-hover">
              <tbody>
              <tr>
                <td class="project-status">
                  <span class="label label-primary">进行中</span>
                </td>
                <td class="project-title">
                  <%= link_to t.theme,tasks_detail_path(taskid: t.id)%>
                  <br/>
                  <small>创建时间 <%= time_ago_in_words(t.created_at)%></small>
                </td>
                <td class>
                  <div class=" forum-info">
                    <span class="views-number">已报名</span>
                    <div>
                      <small>26</small>
                    </div>
                  </div>
                </td>
                <td class>
                  <div class="forum-info">
                    <span class="views-number">浏览 </span>
                    <div>
                      <small>234</small>
                    </div>
                  </div>
                </td>
                <td class>
                  <div class="forum-info">
                    <span class="views-number">创建者 </span>
                    <div>
                      <small><%=t.name %></small>
                    </div>
                  </div>
                </td>
                <td class="project-actions">
                  <i class="fa fa-folder"></i><%=link_to '查看',tasks_detail_path(taskid:t.id),class: "btn btn-white btn-sm" %>
                </td>
              </tr>
            <%end %>
                </tbody>
                </table>
          </div>
        </div>
      </div>
    </div>


  </div>
</div>